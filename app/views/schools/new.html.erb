<% if @school.errors.any? %>
    <% @school.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <%end%>
<%end%>

<h1>Make a New School!</h1>

<%= form_for(@school) do |f| %>
    <h3> Name: </h3>
    <%=f.text_field :name %>
    <h4> Number of Teachers: </h4>
    <%=f.number_field :number_of_teachers %>
    <br><br>
    <%= f.submit "New School!" %>
    <%end%>